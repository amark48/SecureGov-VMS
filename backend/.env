# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securegov_vms
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500 # Suggested for development, e.g., 500 or 1000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_for_production
JWT_EXPIRES_IN=8h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_also_make_it_long_and_random

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=28800000
MFA_ENABLED=true
AUDIT_LOGGING=true

# Compliance Configuration
FICAM_COMPLIANCE=true
FIPS_140_COMPLIANCE=true
HIPAA_COMPLIANCE=true
FERPA_COMPLIANCE=true

# Feature Flags
ENABLE_WATCHLIST_SCREENING=true
ENABLE_BACKGROUND_CHECKS=true
ENABLE_BADGE_PRINTING=true
ENABLE_EMERGENCY_FEATURES=true

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf


