# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securegov_vms
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=8h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=28800000
MFA_ENABLED=true
AUDIT_LOGGING=true

# Compliance Configuration
FICAM_COMPLIANCE=true
FIPS_140_COMPLIANCE=true
HIPAA_COMPLIANCE=true
FERPA_COMPLIANCE=true

# Feature Flags
ENABLE_WATCHLIST_SCREENING=true
ENABLE_BACKGROUND_CHECKS=true
ENABLE_BADGE_PRINTING=true
ENABLE_EMERGENCY_FEATURES=true

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@securegov-vms.com

# SendGrid Configuration (Optional)
SENDGRID_API_KEY=

# Mailgun Configuration (Optional)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Firebase Configuration (Optional)
FIREBASE_ADMIN_SDK_CONFIG=

# OneSignal Configuration (Optional)
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

# Azure AD Configuration
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id_here
AZURE_AD_CLIENT_ID=your_azure_ad_client_id_here
AZURE_AD_JWKS_URI=https://login.microsoftonline.com/{tenant_id}/discovery/v2.0/keys
AZURE_AD_ISSUER=https://login.microsoftonline.com/{tenant_id}/v2.0
AZURE_AD_AUDIENCE=your_azure_ad_client_id_here

# AWS Federation Configuration
AWS_REGION=us-east-1
AWS_FEDERATED_ROLE_ARN_PREFIX=arn:aws:iam::123456789012:role/
AWS_FEDERATION_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log